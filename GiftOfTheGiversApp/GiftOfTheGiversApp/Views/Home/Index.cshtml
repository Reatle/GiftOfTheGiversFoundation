@model GiftOfTheGiversApp.Models.HomeViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid p-0">
    <!-- Hero Section with Background Image -->
    <div class="text-center text-white py-5"
         style="background-image: url('https://images.unsplash.com/photo-1501854140801-50d01698950b?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80');
                background-size: cover;
                background-position: center;
                position: relative;">

        <!-- Overlay for readability -->
        <div style="position:absolute; top:0; left:0; width:100%; height:100%; background-color:rgba(0,0,0,0.5);"></div>

        <div class="position-relative">
            <h1 class="display-4 fw-bold">Gift of the Givers</h1>
            <p class="lead">Together we can make a difference during disasters and crises.</p>
            <a asp-controller="Users" asp-action="Create" class="btn btn-light btn-lg mt-3">Get Started</a>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container py-5">
        <div class="row text-center g-4">
            <div class="col-md-4">
                <div class="p-4 border rounded shadow-sm h-100">
                    <h5 class="fw-bold text-primary">Report Incidents</h5>
                    <p class="text-muted">Quickly submit disaster reports so help can reach faster.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 border rounded shadow-sm h-100">
                    <h5 class="fw-bold text-primary">Donate Resources</h5>
                    <p class="text-muted">Contribute food, clothing, or medical aid to support victims.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 border rounded shadow-sm h-100">
                    <h5 class="fw-bold text-primary">Volunteer Today</h5>
                    <p class="text-muted">Offer your time and skills to join relief efforts.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="bg-light text-center py-5">
        <h3 class="fw-bold text-primary">Be Part of the Change</h3>
        <p class="text-muted">Every action matters. Join us and make a difference!</p>
        <a asp-controller="Users" asp-action="Login" class="btn btn-primary btn-lg">Login to Contribute</a>
    </div>
</div>

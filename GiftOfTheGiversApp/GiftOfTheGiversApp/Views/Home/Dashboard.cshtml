@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-5">
    <h1 class="mb-5 text-center text-primary">Welcome to Your Dashboard!</h1>

    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 text-center h-100 dashboard-card">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h4 class="card-title mb-3">Report Disaster</h4>
                    <p class="card-text mb-4">Submit details about disasters in your area to get help fast.</p>
                    <a class="btn btn-primary btn-lg" asp-controller="DisasterReports" asp-action="Create">Report Now</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 text-center h-100 dashboard-card">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h4 class="card-title mb-3">Make a Donation</h4>
                    <p class="card-text mb-4">Contribute food, clothing, or medical supplies to those in need.</p>
                    <a class="btn btn-primary btn-lg" asp-controller="Donations" asp-action="Create">Donate Now</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 text-center h-100 dashboard-card">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h4 class="card-title mb-3">Volunteer</h4>
                    <p class="card-text mb-4">Sign up to support relief efforts with your skills.</p>
                    <a class="btn btn-primary btn-lg" asp-controller="Volunteers" asp-action="Create">Join Now</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f4f8fb;
    }

    .dashboard-card {
        border-radius: 12px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

    .card-title {
        color: #007bff;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-weight: bold;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .card-text {
        color: #555;
        font-size: 0.95rem;
    }

    h1 {
        font-weight: 700;
    }
</style>

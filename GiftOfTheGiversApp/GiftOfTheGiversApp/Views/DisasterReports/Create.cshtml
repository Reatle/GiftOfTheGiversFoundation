@model GiftOfTheGiversApp.Models.DisasterReport

@{
    ViewData["Title"] = "Create";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Create Disaster Report</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="DisasterReports" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- User Selection -->
                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label"></label>
                            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId">
                                <option value="">-- Select User --</option>
                            </select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <!-- Location -->
                        <div class="mb-3">
                            <label asp-for="Location" class="form-label"></label>
                            <input asp-for="Location" class="form-control" placeholder="Enter location" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <input asp-for="Description" class="form-control" placeholder="Enter description" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Report Date -->
                        <div class="mb-3">
                            <label asp-for="ReportDate" class="form-label"></label>
                            <input asp-for="ReportDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="ReportDate" class="text-danger"></span>
                        </div>

                        <!-- Status -->
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-control">
                                <option value="New">New</option>
                                <option value="InProgress">In Progress</option>
                                <option value="Resolved">Resolved</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <!-- Severity -->
                        <div class="mb-3">
                            <label asp-for="Severity" class="form-label"></label>
                            <select asp-for="Severity" class="form-control">
                                <option value="Low">Low</option>
                                <option value="Medium">Medium</option>
                                <option value="High">High</option>
                            </select>
                            <span asp-validation-for="Severity" class="text-danger"></span>
                        </div>

                        <!-- Submit -->
                        <div class="d-grid">
                            <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center dashboard-footer">
                    <small>
                        Dashboard?
                        <a asp-action="Dashboard" asp-controller="Home" class="dashboard-link">
                            Go Back! <i class="bi bi-arrow-right"></i>
                        </a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>



<style>
    body {
        background-color: #f4f8fb;
    }

    .card {
        border-radius: 10px;
    }

    .card-header {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    input[readonly] {
        background-color: #e9ecef;
    }

    .dashboard-footer {
        background-color: #f8f9fa;
        padding: 15px 0;
        border-top: 1px solid #dee2e6;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
    }

        .dashboard-footer small {
            font-size: 0.9rem;
            color: #6c757d;
        }

        .dashboard-footer .dashboard-link {
            color: #007bff;
            text-decoration: none;
            font-weight: 500;
            margin-left: 5px;
        }

            .dashboard-footer .dashboard-link:hover {
                color: #0056b3;
                text-decoration: underline;
            }

        .dashboard-footer .bi-arrow-right {
            vertical-align: baseline;
            margin-left: 3px;
        }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

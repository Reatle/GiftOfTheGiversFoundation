@model IEnumerable<GiftOfTheGiversApp.Models.Donation>

@{
    ViewData["Title"] = "Donations";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Donations</h1>
        <a class="btn btn-success" asp-action="Create">Create New</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.User)</th>
                    <th>@Html.DisplayNameFor(model => model.DonationType)</th>
                    <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                    <th>@Html.DisplayNameFor(model => model.DonationDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <th>@Html.DisplayNameFor(model => model.DistributionNotes)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.User.Email</td>
                        <td>@item.DonationType</td>
                        <td>@item.Quantity</td>
                        <td>@item.DonationDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.Status</td>
                        <td>@item.DistributionNotes</td>
                        <td>
                            <a class="btn btn-sm btn-primary me-1" asp-action="Edit" asp-route-id="@item.DonationId">Edit</a>
                            <a class="btn btn-sm btn-info me-1 text-white" asp-action="Details" asp-route-id="@item.DonationId">Details</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.DonationId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        background-color: #f4f8fb;
    }

    h1.h3 {
        font-weight: 600;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .btn-sm {
        font-size: 0.8rem;
    }

    .table-hover tbody tr:hover {
        background-color: #e9f5ff;
    }
</style>

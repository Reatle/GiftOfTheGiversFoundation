@model GiftOfTheGiversApp.Models.Donation

@{
    ViewData["Title"] = "Create";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Create Donation</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label"></label>
                            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DonationType" class="form-label"></label>
                            <select asp-for="DonationType" class="form-select">
                                <option value="">-- Select Donation Type --</option>
                                <option value="Food">Food</option>
                                <option value="Clothing">Clothing</option>
                                <option value="Medical">Medical</option>
                            </select>
                            <span asp-validation-for="DonationType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label"></label>
                            <input asp-for="Quantity" class="form-control" placeholder="Enter quantity" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DonationDate" class="form-label"></label>
                            <input asp-for="DonationDate" class="form-control" type="date" />
                            <span asp-validation-for="DonationDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="">-- Select Status --</option>
                                <option value="Pending">Pending</option>
                                <option value="Delivered">Delivered</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DistributionNotes" class="form-label"></label>
                            <input asp-for="DistributionNotes" class="form-control" placeholder="Enter notes" />
                            <span asp-validation-for="DistributionNotes" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center dashboard-footer">
                    <small>
                        Dashboard?
                        <a asp-action="Dashboard" asp-controller="Home" class="dashboard-link">
                            Go Back! <i class="bi bi-arrow-right"></i>
                        </a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f4f8fb;
    }

    .card {
        border-radius: 10px;
    }

    .card-header {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    input[readonly] {
        background-color: #e9ecef;
    }

    /* Dashboard footer styling */
    .dashboard-footer {
        background-color: #f8f9fa;
        padding: 15px 0;
        border-top: 1px solid #dee2e6;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
    }

        .dashboard-footer small {
            font-size: 0.9rem;
            color: #6c757d;
        }

        .dashboard-footer .dashboard-link {
            color: #007bff;
            text-decoration: none;
            font-weight: 500;
            margin-left: 5px;
        }

            .dashboard-footer .dashboard-link:hover {
                color: #0056b3;
                text-decoration: underline;
            }

        .dashboard-footer .bi-arrow-right {
            vertical-align: baseline;
            margin-left: 3px;
        }
</style>

